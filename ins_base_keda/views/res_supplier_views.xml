<odoo>
    <data>
        <record model="ir.ui.view" id="res_supplier_form_view">
            <field name="name">res.supplier.form.view</field>
            <field name="model">res.supplier</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group> 
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="res_supplier_tree_view">
            <field name="name">res.supplier.tree.view</field>
            <field name="model">res.supplier</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="res_supplier_action">
            <field name="name">Supplier</field>
            <field name="res_model">res.supplier</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</odoo>